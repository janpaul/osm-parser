{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2017", "es6", "dom"],
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
